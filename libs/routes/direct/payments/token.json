{
  "grant": {
    "method": "POST",
    "params": {
      "app_key": {
        "required": true,
        "type": "string"
      },
      "app_secret": {
        "required": true,
        "type": "string"
      }
    },
    "url": "/payments/token/grant"
  },
  "refresh": {
    "method": "POST",
    "params": {
      "app_key": {
        "required": true,
        "type": "string"
      },
      "app_secret": {
        "required": true,
        "type": "string"
      },
      "refresh_token": {
        "required": true,
        "type": "string"
      }
    },
    "url": "/payments/token/refresh"
  }
}
